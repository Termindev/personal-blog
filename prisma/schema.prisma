generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model article {
  id           String    @id @default(uuid()) @db.Uuid

  title_ar     String
  desc_ar      String
  content_ar   String
  tags_ar      tag_ar[]  @relation("ArticleTagsAr")

  title_en     String
  desc_en      String
  content_en   String
  tags_en      tag_en[]  @relation("ArticleTagsEn")

  title_ru     String
  desc_ru      String
  content_ru   String
  tags_ru      tag_ru[]  @relation("ArticleTagsRu")

  visible       Boolean @default(true)
  reviewable    Boolean @default(true)

  publish_date DateTime  @default(now())
}

model tag_ar {
  id       String     @id @default(uuid()) @db.Uuid
  name     String     @unique
  articles article[]  @relation("ArticleTagsAr")
}

model tag_en {
  id       String     @id @default(uuid()) @db.Uuid
  name     String     @unique
  articles article[]  @relation("ArticleTagsEn")
}

model tag_ru {
  id       String     @id @default(uuid()) @db.Uuid
  name     String     @unique
  articles article[]  @relation("ArticleTagsRu")
}


model goals {
  id String @id @default(uuid()) @db.Uuid
  
  title_ar     String
  desc_ar      String

  title_en     String
  desc_en      String

  title_ru     String
  desc_ru      String

  achieved Boolean @default(false)
  achieved_at DateTime?

  visible       Boolean @default(true)

  deadline DateTime  @default(now())
}