generator client {
  provider = "prisma-client-ts"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.sqlite"
}

model EnArticle {
  id           String      @id
  title        String
  desc         String
  content      String
  publish_date DateTime @default(now())
}

model ArArticle {
  id           String      @id
  title        String
  desc         String
  content      String
  publish_date DateTime @default(now())
}

model RuArticle {
  id           String      @id
  title        String
  desc         String
  content      String
  publish_date DateTime @default(now())
}
